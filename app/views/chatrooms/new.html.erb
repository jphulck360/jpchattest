<div class="row col-md-8 col-md-offset-2">

  <h1>Criar uma sala de bate papo</h1>
    <div class="well">
      <div class="chatroom-form">
        <%= form_for @chatroom do |f| %>
          <div class="input-group">
            <span class="input-group-addon">Nome da Sala:</span>
            <%= f.text_field :topic, class: "form-control"%>
          </div>
          <%= f.submit 'Criar Sala', class: "btn btn-primary", id: "create-chatroom" %>
        <% end %>
      </div>
    </div>

    <%= render partial: 'layouts/flash_errors'%>
</div>

